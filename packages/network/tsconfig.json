{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "declarationDir": "./dist/types/",
    "declarationMap": false,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "baseUrl": "./",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "DOM",
      "ES2015"
    ],
    "allowJs": false
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "*.test.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}